<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Atualizar Artigo </h2>
        </div>

        <div class="card-body">
            <form method="POST" action="/articles/updateArticle">
                <input type="hidden" value="<%= article.id %>" name="id">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo da categoria" value="<%= article.title %>">
                <hr>
                <textarea class="form-control" name="body" id="article" cols="30" rows="10" placeholder="Escreva seu artigo aqui."><%- article.body %></textarea>
                <br>
                <label for="">Categoria atual: <%= article.categoryId %></label>
                <select name="category" class="form-control" id="">
                    <% categories.forEach((category) => { %>
                        <% if (category.id == article.categoryId) { %>
                            <option value="<%= category.id %>" selected><%= category.title %></option>
                        <%}else { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% } %>
                    <% }) %>
                </select>

                <br>
                <input type="hidden" name="id" value="">
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>

    </div>
    </div>

<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: 'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table past emoticons'
        
    })
</script>